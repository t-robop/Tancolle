<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ReUserDetailActivity"
    android:id="@+id/coordinator_layout"
    tools:showIn="@layout/activity_scrolling">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />


        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:gravity="top"
                        android:layout_weight="1"
                        android:text="カテゴリ"
                        android:textColor="#808080"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="bottom|center"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4"/>

                        <org.t_robop.y_ogawara.tancolle.autoShrinkTextView
                            android:id="@+id/category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="カテゴリ："
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/b"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="誕生日"
                        android:textColor="#808080"
                        android:textSize="20dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <org.t_robop.y_ogawara.tancolle.autoShrinkTextView
                        android:id="@+id/Birthay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="00/00"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="72dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/Current"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="年齢"
                        android:textColor="#808080"
                        android:textSize="20dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <org.t_robop.y_ogawara.tancolle.autoShrinkTextView
                        android:id="@+id/age"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="00才"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="40dp" />

                    <TextView
                        android:id="@+id/Remaining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="情報"
                        android:textColor="#808080"
                        android:textSize="20dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />


                    <org.t_robop.y_ogawara.tancolle.autoShrinkTextView
                        android:id="@+id/nokori"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="残り000日"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="40dp"

                        />

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="通知"
                    android:textSize="20dp"
                    android:textColor="#808080"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="10"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="一ヶ月前"
                                android:layout_weight="5"
                                android:textSize="20dp"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                android:id="@+id/m_notif"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="7"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="10"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="一週間前"
                                android:layout_weight="5"
                                android:textSize="20dp"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                android:id="@+id/w_notif"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="7"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="10"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="前日"
                                android:layout_weight="5.5"
                                android:textSize="20dp"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                android:id="@+id/y_notif"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="7"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="10"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="当日"
                                android:layout_weight="5.5"
                                android:textSize="20dp"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                android:id="@+id/t_notif"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="7"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="通知日を追加"
                                android:layout_weight="3"
                                android:textSize="20dp"
                                android:gravity="center_vertical"
                                android:textColor="#a0a0a0"
                                android:tag="0"
                                android:id="@+id/cusText1"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="10"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="通知日を追加"
                                android:layout_weight="3"
                                android:textSize="20dp"
                                android:gravity="center_vertical"
                                android:textColor="#a0a0a0"
                                android:tag="1"
                                android:id="@+id/cusText2"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="10"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="通知日を追加"
                                android:layout_weight="3"
                                android:textSize="20dp"
                                android:gravity="center_vertical"
                                android:textColor="#a0a0a0"
                                android:tag="2"
                                android:id="@+id/cusText3"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="10"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/d"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Memo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="メモ"
                        android:textSize="20dp"
                        android:textColor="#808080"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/chou"
                        android:layout_width="match_parent"
                        android:layout_height="156dp"
                        android:layout_weight="1"
                        android:onClick="memoclick"
                        android:text="あああああ"
                        android:textAppearance="?android:attr/textAppearanceLarge" />


                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
