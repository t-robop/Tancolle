<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"/>

                <org.t_robop.y_ogawara.tancolle.CircleImageView
                    android:layout_width="250dp"
                    android:layout_height="300dp"
                    android:id="@+id/userview"
                    android:onClick="UserView"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"/>

                <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:onClick="EditPho"
                                android:textSize="15dp"
                                android:id="@+id/EditPho"
                                android:inputType="text"
                                android:focusable="false"
                                android:textColorHint="#a09f9f"
                                android:hint="ふりがな"/>

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:hint="登録名"
                                android:onClick="EditName"
                                android:id="@+id/EditName"
                                android:inputType="text"
                                android:focusable="false"
                                android:textColorHint="#a09f9f" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="TwitterID"
                                android:id="@+id/twitter"
                                android:onClick="EditTwitter"
                                android:inputType="text"
                                android:focusable="false"
                                android:textColorHint="#a09f9f"
                                android:gravity="center_vertical"/>

                        </android.support.design.widget.TextInputLayout>

                        <!--<TextView-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:layout_weight="3"/>-->

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="誕生日"
                            android:textSize="20dp"
                            android:textColor="#808080"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="2000/10/10"
                            android:textSize="60dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:onClick="BirthDay"
                            android:id="@+id/userbirthday"
                            android:textColor="#000000"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="10"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="年齢"
                                android:textSize="20dp"
                                android:gravity="center_vertical"
                                android:id="@+id/YearsOld"
                                android:textColor="#000000"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <CheckBox
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="8"
                                android:gravity="center_vertical"
                                android:id="@+id/TamuraCheck"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="年齢不詳"
                                android:layout_weight="5.5"
                                android:textSize="20dp"
                                android:gravity="center_vertical"
                                android:id="@+id/tamura"
                                android:textColor="#000000"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="4"/>

                        </LinearLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="カテゴリ"
                            android:textSize="20dp"
                            android:textColor="#808080"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:id="@+id/spinner1"
                                android:gravity="center_vertical">
                            </Spinner>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:text="+"
                                android:onClick="CategoryPlus"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"/>

                        </LinearLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:text="通知設定"
                            android:textSize="20dp"
                            android:textColor="#808080"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="8"
                                        android:gravity="center_vertical"
                                        android:id="@+id/MonthCheck"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="一ヶ月前"
                                        android:layout_weight="5"
                                        android:textSize="20dp"
                                        android:gravity="center_vertical"
                                        android:textColor="#000000"
                                        android:id="@+id/m_notif"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="7"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="8"
                                        android:gravity="center_vertical"
                                        android:id="@+id/WeekCheck"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="一週間前"
                                        android:layout_weight="5"
                                        android:textSize="20dp"
                                        android:gravity="center_vertical"
                                        android:textColor="#000000"
                                        android:id="@+id/w_notif"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="7"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="8.5"
                                        android:gravity="center_vertical"
                                        android:id="@+id/YesterdayCheck"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="前日"
                                        android:layout_weight="5.5"
                                        android:textSize="20dp"
                                        android:gravity="center_vertical"
                                        android:textColor="#000000"
                                        android:id="@+id/y_notif"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="7"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="8.5"
                                        android:gravity="center_vertical"
                                        android:id="@+id/TodayCheck"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="当日"
                                        android:layout_weight="5.5"
                                        android:textSize="20dp"
                                        android:gravity="center_vertical"
                                        android:textColor="#000000"
                                        android:id="@+id/t_notif"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="7"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="8"
                                        android:gravity="center_vertical"
                                        android:id="@+id/CutomCheck1"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="通知日を追加"
                                        android:layout_weight="3"
                                        android:textSize="20dp"
                                        android:gravity="center_vertical"
                                        android:textColor="#a0a0a0"
                                        android:onClick="cusText"
                                        android:tag="0"
                                        android:id="@+id/cusText1"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="10"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="8"
                                        android:gravity="center_vertical"
                                        android:id="@+id/CutomCheck2"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="通知日を追加"
                                        android:layout_weight="3"
                                        android:textSize="20dp"
                                        android:gravity="center_vertical"
                                        android:textColor="#a0a0a0"
                                        android:onClick="cusText"
                                        android:tag="1"
                                        android:id="@+id/cusText2"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="10"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="8"
                                        android:gravity="center_vertical"
                                        android:id="@+id/CutomCheck3"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="通知日を追加"
                                        android:layout_weight="3"
                                        android:textSize="20dp"
                                        android:gravity="center_vertical"
                                        android:textColor="#a0a0a0"
                                        android:onClick="cusText"
                                        android:tag="2"
                                        android:id="@+id/cusText3"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="10"/>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:cardUseCompatPadding="true">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:id="@+id/Memo"
                            android:gravity="top|left"
                            android:textColorHint="#a09f9f"
                            android:hint="メモ"/>

                    </android.support.design.widget.TextInputLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
