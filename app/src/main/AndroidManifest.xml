<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.t_robop.y_ogawara.tancolle">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/tancole_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name=".Notifier" android:process=":remote">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        <activity
            android:name=".UserRegisterActivity"
            android:label="@string/app_name"></activity>
        <activity android:name=".SearchActivity"></activity>
        <activity android:name=".UserDetailActivity"></activity>
        <activity android:name=".GestureDecActivity"></activity>
        <activity android:name=".AlarmActivity"></activity>
        <activity android:name=".HomeActivity"></activity>
        <activity android:name=".SettingActivity"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ViewFlipperTestActivity"></activity>
        <activity android:name=".SettingCategoryActivity"></activity>
        <activity android:name=".SettingDrawActivity"></activity>
        <activity android:name=".LicenseActivity"/>

        <receiver android:name=".WidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider" />
        </receiver>

    </application>

</manifest>